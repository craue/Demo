{% extends "A2lixDemoTranslationBundle:Backend:layout.html.twig" %}

{% block content %}
    <h2>ProductGedmo show</h2>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ entity.slug }}</td>
            </tr>
            {% for locale in available_locales %}
                <tr>
                    <th>Title ({{ locale }})</th>
                    <td>{{ entity.getTitleForLocale(locale) }}</td>
                </tr>
            {% endfor %}
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('backend_productGedmo') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('backend_productGedmo_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>
            {{ form(deleteForm) }}
        </li>
    </ul>
{% endblock %}